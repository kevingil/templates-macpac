/* Invoice Styles */

html,
body {
    font-family: arial, sans-serif;
    height: 100%;
    width: 100%;
}

#invoicewrap {
    width: 650px;
    min-height: 100%;
    position: relative;
    margin: 0 auto;
}

#top-left {
    font-size: 11pt;
    margin: 5px;
}

#top-right {
    float: right;
    font-size: 11pt;
    text-align: right;
    margin: 5px;
}

#bill-to {
    margin: 10px 0 15px 10px;
    line-height: 120%;
    display: inline-block;
    font-size: 11pt;
}

#ship-to {
    margin: 10px 0 15px 40px;
    line-height: 120%;
    display: inline-block;
    font-size: 11pt;
}

#totals {
    float: right;
    clear: both;
    text-align: right;
    font-size: 10pt;
}

#rem-1 {
     font-size: 10pt;
}

#rem-2 {    
    float: right;
     text-align: right;
     font-size: 10pt;
    margin: 10px;
}


#inv-due {
    border: 2px dotted #999;
    border-radius: 5px;
    width: 250px;
    padding: 5px;
    font-size: 11pt;
    margin: 2px 0 15px 50px;
    text-align: center;
}

#stmt-terms {
    border: 1px solid #999;
    border-radius: 5px;
    padding: 5px;
    font-size: 10pt;
    color: #666;
    margin-top: 15px;
}

#inv-terms {
    border: 1px solid #999;
    border-radius: 5px;
    padding: 5px;
    font-size: 9pt;
    color: #666;
    margin-top: 15px;
}

.border {
    border: 1px solid #999;
}


.space {
    padding-left: 5px;
}

.sm-header {
    padding: 3px 0 2px 5px;;
    background-color: #e0f1fe;
    width: 220px;
    font-weight: bold;
}

p {
    font-size: 11pt;
}

.right {
    text-align: right;
}

.ar {
    text-align: right;
    font-size: 11pt;
    margin-right: 25px;
}

.center {
    text-align: center;
}

.small {
    font-size: 8pt;
}

table.inv-1 {
    width: 100%;
    border-collapse: collapse;
}
table.inv-1 th {
    text-align: left;
    border: 1px solid #ccc;
    padding: 3px;
    font-size: 10pt;
    background-color: #e0f1fe;
}

table.inv-1 td {
    border: 1px solid #ccc;
    padding: 3px;
    font-size: 10pt;
}

table.inv-2 {
    width: 100%;
    border-collapse: collapse;
}

table.inv-2 th {
    text-align: left;
    border: 1px solid #ccc;
    padding: 3px;
    font-size: 10pt;
    background-color: #e0f1fe;
    valign: bottom;
}

table th.align-right { text-align: right; }

table.inv-2 td {
    border: 1px solid #ccc;
    padding: 3px;
    font-size: 10pt;
}

.inv-2 tr:nth-child(odd) {
    background-color: #e0f1fe;
}